{
  "name": "squealer-web-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node build/server/index.js",
    "dev": "yarn workspace moddash dev",
    "dev:app:noapi": "yarn workspace app start",
    "dev:app": "NODE_ENV=development concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\" \"yarn workspace app build:watch\"",
    "dev:server": "NODE_ENV=development concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "build": "rm -r build && npm run build:server && npm run build:app && npm run build:moddash",
    "build:server": "tsoa spec-and-routes && tsc",
    "build:app": "yarn workspace app build",
    "build:moddash": "yarn workspace moddash build",
    "prepare": "husky install",
    "commit": "cz",
    "deploy:flecs": "cd deploy && ansible-playbook playbook.yml --limit donbartolo",
    "deploy:gio": "cd deploy && ansible-playbook playbook.yml --limit marullo",
    "deploy:luca": "cd deploy && ansible-playbook playbook.yml --limit eufemia"
  },
  "dependencies": {
    "@decorators/express": "^2.9.3",
    "@dicebear/collection": "^6.0.2",
    "@dicebear/core": "^6.0.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jose": "^4.14.1",
    "mongoose": "^7.0.4",
    "tsoa": "^5.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@types/express": "^4.17.17",
    "@types/swagger-ui-express": "^4.1.3",
    "commitizen": "^4.3.0",
    "concurrently": "^8.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "inquirer": "^8.2.5",
    "nodemon": "^2.0.22",
    "swagger-ui-express": "^4.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "workspaces": [
    "app",
    "moddash"
  ],
  "nodemonConfig": {
    "exec": "ts-node server/index.ts",
    "watch": [
      "server/*",
      "model/*",
      "api/*"
    ],
    "ext": "ts",
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": "2000"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "npx commitlint --edit $1"
    }
  }
}
