{
  "name": "squealer-web-app",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node build/server/index.js",
    "dev": "yarn workspace dashboard dev",
    "build": "npm run build:api && npm run build:app && npm run build:moddash",
    "build:server": "tsc",
    "build:app": "yarn workspace app build",
    "build:moddash": "yarn workspace moddash build",
    "prepare": "husky install",
    "commit": "cz",
    "deploy:flecs": "cd deploy && ansible-playbook playbook.yml --limit donbartolo",
    "deploy:gio": "cd deploy && ansible-playbook playbook.yml --limit marullo",
    "deploy:luca": "cd deploy && ansible-playbook playbook.yml --limit eufemia"
  },
  "dependencies": {
    "@decorators/express": "^2.9.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@types/express": "^4.17.17",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "inquirer": "^8.2.5",
    "typescript": "^5.0.4"
  },
  "workspaces": [
    "app",
    "moddash"
  ],
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "npx commitlint --edit $1"
    }
  }
}
